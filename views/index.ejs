<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    <% if (todos.length) { %>
      <ul>
        <% todos.forEach(function(t, idx) { %>
          <li><%= t.todo %> - <%= t.done ? 'done' : 'Not Done' %>
          <form action="/<%= idx %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete">
          </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <h3>There are no To Dos yet!</h3>
    <% } %>
    <hr>
    <form action="/" method="POST">
      <input type="text" name="todo" required>
      <input type="submit" value="ADD TO DO">
    </form>
  </body>
</html>
